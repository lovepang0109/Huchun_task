{
    "version": 2,
    "builds": [
        { "src": "/api/index.php", "use": "vercel-php@0.5.5" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    

    "rewrites": [

        { 
            "source": "/api/v1/(.*)", 
            "destination": "/api/index.php" 
        },
         { 
            "source": "/(assets|flags|json|langs|ssl)/(.*)", 
            "destination": "public/$1/$2" 
        },
         { 
            "source": "/config.js", 
            "destination": "public/config.js" 
        },
         { 
            "source": "/favicon.ico", 
            "destination": "public/favicon.ico" 
        },
         { 
            "source": "/loader.css", 
            "destination": "public/loader.css" 
        },
         { 
            "source": "/logo.png", 
            "destination": "public/logo.png" 
        }

    ],

    "env": {
        "APP_NAME": "Vercel Laravel",
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_KEY": "base64:OHVHcRHMErSX1OeLE2WC6kpT2/FeHF0D5SaQPr6rxEE=",
        "APP_URL": "https://huchun-task.vercel.app/",
        "VERCEL_DEMO_MODE": "true",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "array",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "SSR_TEMP_PATH": "/tmp/ssr",
        "NODE_PATH": "node"
    }
}
